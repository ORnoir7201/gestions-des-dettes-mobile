<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp">

        <!-- Logo / Titre -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="48dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ”‘"
                android:textSize="60sp"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mot de passe oubliÃ©"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#2196F3"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Carnet de Dettes"
                android:textSize="14sp"
                android:textColor="#757575"
                android:layout_marginTop="8dp"/>

        </LinearLayout>

        <!-- Formulaire de rÃ©initialisation -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:padding="24dp"
            android:elevation="4dp"
            android:outlineProvider="bounds">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Entrez votre adresse email pour recevoir un lien de rÃ©initialisation de mot de passe."
                android:textSize="15sp"
                android:textColor="#757575"
                android:lineSpacingExtra="4dp"
                android:gravity="center"
                android:layout_marginBottom="24dp"/>

            <!-- Email -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"

                app:boxStrokeColor="#2196F3"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusBottomEnd="12dp"
                app:boxCornerRadiusTopStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:endIconMode="clear_text"
                android:layout_marginBottom="24dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:textColor="#212121"/>

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Bouton RÃ©initialiser -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnReset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Envoyer le lien de rÃ©initialisation"
                android:textSize="16sp"
                app:cornerRadius="12dp"

                app:iconGravity="textStart"
                app:iconPadding="8dp"
                android:paddingVertical="14dp"
                android:layout_marginBottom="16dp"/>




        </LinearLayout>

    </LinearLayout>
</ScrollView>