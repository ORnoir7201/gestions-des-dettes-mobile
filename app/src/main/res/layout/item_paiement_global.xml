<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="6dp"
    android:background="@drawable/card_background"
    android:elevation="3dp"
    android:outlineProvider="bounds">

    <!-- En-tÃªte avec nom client et montant -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Nom du client -->
        <TextView
            android:id="@+id/tvClient"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Nom PrÃ©nom"
            android:textColor="#212121"
            android:textSize="16sp"
            android:textStyle="bold"
            android:ellipsize="end"
            android:maxLines="1"/>

        <!-- Montant avec badge colorÃ© -->
        <TextView
            android:id="@+id/tvMontant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+3 000 FCFA"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:textStyle="bold"
            android:background="@drawable/badge_paiement"
            android:paddingHorizontal="12dp"
            android:paddingVertical="6dp"/>

    </LinearLayout>

    <!-- Ligne sÃ©paratrice -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EEEEEE"
        android:layout_marginVertical="8dp"/>

    <!-- Date et informations -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- IcÃ´ne calendrier -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“…"
            android:textSize="14sp"
            android:layout_marginEnd="6dp"/>

        <!-- Date -->
        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01 janvier 2024"
            android:textColor="#757575"
            android:textSize="14sp"/>

        <!-- Espaceur -->
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>

        <!-- Heure -->
        <TextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="14:30"
            android:textColor="#757575"
            android:textSize="14sp"/>

    </LinearLayout>

    <!-- Description (optionnelle) -->
    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Paiement reÃ§u"
        android:textColor="#9E9E9E"
        android:textSize="13sp"
        android:layout_marginTop="4dp"
        android:ellipsize="end"
        android:maxLines="2"/>

</LinearLayout>